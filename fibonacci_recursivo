#include<iostream>
using namespace std;
int factorial(int  n);

int main (){
   int num,aux;
   cout<<"Digite un numero :"<<endl;
   cin>>num;
   aux = factorial(num);
   if(aux>=0){
        cout<<"Resultado: "<<aux<<endl;
   }else{
       cout<<"EL numero es invalido ";
   }
   return 0;
}
 int factorial(int n)
 {
     if(n>=0){
        if(n==0){
        n=1;
         }
         else{
            n=n*factorial(n-1);

         }
        return n;
     }else{
         return -1;
     }
 }
